<div class="wrappered">
    <div class="page-header">
        <h1 class="text-center">Add a new car</h1>
    </div>

    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <form name="addCarForm" ng-attemt ng-add-car-validation="addCar()" novalidate>
                <div class="form-group" ng-class="{'has-error': addCarForm.addCarModel.$invalid && (addCarForm.addCarModel.$dirty || attempt.addCarForm.attempted)}">
                    <label for="addCarModel">Car model</label>
                    <input type="text" class="form-control" name="addCarModel" id="addCarModel" placeholder="Car model" ng-model="model" required>
                    <span class="help-block" ng-show="addCarForm.addCarModel.$error.required">Required</span>
                </div>

                <div class="form-group" ng-class="{'has-error': addCarForm.addCarYear.$invalid && (addCarForm.addCarYear.$dirty || attempt.addCarForm.attempted)}">
                    <label for="addCarYear">Year</label>
                    <input type="number" min="1900" max="{{currentYear}}" class="form-control" name="addCarYear" id="addCarYear" placeholder="Yaer" ng-model="year" required>
                    <span class="help-block" ng-show="addCarForm.addCarYear.$error.required">Required</span>
                    <span class="help-block" ng-show="addCarForm.addCarYear.$error.number">This field must contains only numbers.</span>
                    <span class="help-block" ng-show="addCarForm.addCarYear.$error.min">Sorry, min year is 1900.</span>
                    <span class="help-block" ng-show="addCarForm.addCarYear.$error.max">Sorry, max year is {{currentYear}}.</span>
                </div>

                <div class="form-group" ng-class="{'has-error': addCarForm.addCarNumDoors.$invalid && (addCarForm.addCarNumDoors.$dirty || attempt.addCarForm.attempted)}">
                    <label for="addCarNumDoors">Number of doors</label>
                    <input type="number" min="0" max="10" class="form-control" name="addCarNumDoors" id="addCarNumDoors" placeholder="Doors number" ng-model="doors" required>
                    <span class="help-block" ng-show="addCarForm.addCarNumDoors.$error.required">Required</span>
                    <span class="help-block" ng-show="addCarForm.addCarNumDoors.$error.number">This field must contains only numbers.</span>
                    <span class="help-block" ng-show="addCarForm.addCarNumDoors.$error.min">Sorry, min count is 0.</span>
                    <span class="help-block" ng-show="addCarForm.addCarNumDoors.$error.max">Sorry, max count is 10.</span>
                </div>

                <div class="form-group" ng-class="{'has-error': addCarForm.addCarVin.$invalid && (addCarForm.addCarVin.$dirty || attempt.addCarForm.attempted)}">
                    <label for="addCarVin">Vin number</label>
                    <input type="text" maxlength="16" minlength="16" class="form-control" name="addCarVin" id="addCarVin" placeholder="Vin number" ng-model="vin" required>
                    <span class="help-block" ng-show="addCarForm.addCarVin.$error.required">Required</span>
                    <span class="help-block" ng-show="addCarForm.addCarVin.$error.minlength">Vin code must have 16 characters.</span>
                    <span class="help-block" ng-show="addCarForm.addCarVin.$error.maxlength">Vin code must have 16 characters.</span>
                </div>

                <div class="form-group" ng-class="{'has-error': addCarForm.addCarPrice.$invalid && (addCarForm.addCarPrice.$dirty || attempt.addCarForm.attempted)}">
                    <label for="addCarPrice">Price</label>
                    <input type="number" min="0" class="form-control" name="addCarPrice" id="addCarPrice" placeholder="Price" ng-model="price" required>
                    <span class="help-block" ng-show="addCarForm.addCarPrice.$error.required">Required</span>
                    <span class="help-block" ng-show="addCarForm.addCarPrice.$error.number">This field must contains only numbers.</span>
                    <span class="help-block" ng-show="addCarForm.addCarPrice.$error.min">Sorry, min price is 0.</span>
                </div>

                <div class="form-group">
                    <label for="addCarImage">Image</label>
                    <input type="file" accept="image/*" name="addCarImage" id="addCarImage" ng-file-select>
                    <i ng-hide="imageSrc" class="help-block">No image choosed</i>
                    <div ng-hide="!imageSrc" class="addCarContainer">
                        <img class="addCarImg" ng-hide="!imageSrc" ng-src="{{imageSrc}}">
                    </div>
                    <uib-progressbar class="addCarProgressImg" ng-hide="!imageSrc" value="progress" max="max"></uib-progressbar>
                </div>

                <div class="checkbox">
                    <label>
                        <input type="checkbox" ng-model="airConditioner"> Air conditioner
                    </label>
                </div>

                <div class="checkbox">
                    <label>
                        <input type="checkbox" ng-model="autoTransmission"> Automatic transmission
                    </label>
                </div>

                <button type="submit" class="btn btn-primary add-car-submit">Add car</button>
            </form>
        </div>
    </div>
</div>
